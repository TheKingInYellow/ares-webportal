{{#each dots as |r|}}
 {{#if (eq r 0)}}
 <i class="far fa-circle fa-sm char-dot-empty"></i>
 {{else if (eq r 1)}}
 <i>¼</i>
 {{else if (eq r 2)}}
 <i class="fas fa-adjust fa-sm char-dot-half"></i>
 {{else if (eq r 3)}}
 <i>¾</i>
 {{else}}
 <i class="fas fa-circle fa-sm char-dot-fill"></i>
 {{/if}}
{{/each}}
{{#if (gte progress 2)}}
 ({{progress}} progress)
{{/if}}
